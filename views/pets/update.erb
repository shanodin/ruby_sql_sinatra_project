<h1>Update <%= @pet.name %>'s Details</h1>

<form action="/pets/<%= @pet.id %>" method="post">

  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= @pet.name %>">
<br><br>

  <label for="type">Type:</label>
  <input type="text" id="type" name="type" value="<%= @pet.type %>">
<br><br>

  <label for="breed">Breed:</label>
  <input type="text" id="breed" name="breed" value="<%= @pet.breed %>">
<br><br>

  <label for="can_adopt">Ready for adoption?</label>
  <input type="checkbox" name="can_adopt" id="can_adopt" value="true" />
<br><br>

  <label for="status">Status:</label>
  <select id="status" name="status">
    <option value="Ready For Adoption">Ready For Adoption</option>
    <option value="At The Vet">At The Vet</option>
    <option value="Adopted">Adopted</option>
    <option value="In Evaluation">In Evaluation</option>
    <option value="In Training">In Training</option>
  </select>
<br><br>

</form>
