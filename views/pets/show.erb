<h1>Pet Details</h1>
<br>
<h2><%= @pet.name %></h2>
<br>
<p>Type: <%= @pet.type %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Status: <%= @pet.status %></p>
<p>Ready for Adoption?: <%= @pet.can_adopt %></p>
<p>Admission Date: <%= @pet.admission_date %></p>

<% if @pet.adoption %>
  <p>Owner: <a href="/owners/<%= @pet.adoption.owner.id %>"><%= @pet.adoption.owner.name %></a></p>
<% else %>
 <p>
    Owner: None yet - Could it be you?
 </p>
<% end %>
<form action="/pets/<%= @pet.id %>/delete" method="post">
<input type="submit" value="Remove This Pet" />
</form>
<br>
<form action="/pets/<%= @pet.id %>/edit" method="post">
<input type="submit" value="Update This Pet" />
</form>
